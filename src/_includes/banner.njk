<div class="header-image-wrapper">
  <img src="https://media.swchrc.com/header_images/swchrc-base.webp" alt="Header" class="header-image" id="header-base-image" style="display: none;" />
  <img src="https://media.swchrc.com/header_images/swchrc-xmas.webp" alt="Header" class="header-image" id="header-xmas-image" style="display: none;" />
</div>
<div class="header-outer-wrapper">
  <div class="header-wrapper" id="header-wrapper">
    <div class="header-title">Southwest Columbus Ham Radio Club</div>
    <button class="menu-toggle" id="menu-button">â˜°</button>
  </div>

  <nav class="navigation-menu">
    <ul>
      {% for item in menu %}
        <li><a class="link" id="{{ item.id }}" href="{{ item.href }}">{{ item.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>
</div>

<script>
  const urlChecks = [
    {% for item in menu | reverse %}
      '{{ item.urlcheck }}',
    {% endfor %}
  ];
  function selectLink(id) {
    const link = document.getElementById(id);
    link.classList.add('selected');
  }
  function initialize() {
    for (let i = 0, len = urlChecks.length; i < len; i++) {
      if (window.location.pathname.startsWith(urlChecks[i])) {
        selectLink(urlChecks[i].replace('/', ''));
        break;
      }
    }
  }
  initialize();
</script>

<script>
  const images = {{ banner.images | dump | safe }};
  const month = (new Date()).getMonth() + 1;
  
  for (let i = 0, len = images.length; i < len; i++) {
    if (images[i].month === month) {
      const headerImage = document.getElementById(images[i].image);
      headerImage.setAttribute('style', 'display: block;');
      break;
    }
  }
</script>
